<% provide(:title, "Edit Post: #{@post.title}") %>

<div class="wrapper">
	<h2>Edit Post</h2>
	
	<% if @post && @post.errors.any? %>
		<div class="error_messages">
			<h2>Invalid Submission</h2>
			<ul>
				<% for message in @post.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>	
	<% end %>
		
	<%= form_for(:post, :url=>{:action => 'update', :id => @post.id}, :method => :put) do |f| %>		
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :body, "Post" %>
		<%= f.text_area :body %>
		
		<%= f.label :tag_list, "Tags (optional)" %>		
		<p class="fieldDescription">Enter a comma separated list of tags.</p>
		<%= f.text_field :tag_list %>
    
    <%# f.label :url_alias, "URL Alias (optional)"%>
    <!-- <p class="fieldDescription">Example: any-questions</p> -->
    <%# f.text_field :url_alias %>
		
		<%= f.hidden_field :status, :value => 1 %>
		
		<% if @post.status == 0 %>
			<%= f.submit "Publish", :class => "cta submit" %>
		<% else %>
			<%= f.submit "Update", :class => "cta submit" %>
		<% end %>
		
		<%= f.submit "Save for later", {:class => "cta  submit", :id => "save"} %>						
		<%= link_to "Cancel", dashboard_path, {:class => "cta", :id => "cancel"}%>
		
	<% end %>	
</div>