<section id="contact">

  <%= form_for(@message, url: contact_path, html: {class: "contact-form"}) do |f| %>    

    <h2>Get in Touch</h2>

    <%= content_tag :div, flash[:success], class: 'flash flash-success' if  flash[:success] %>

    <%= content_tag :div, flash[:error], class: 'flash flash-error' if  flash[:error] %>

    <p>If you're interested in working together on a project, or just want to say hello, I'd love to hear from you!</p>

    <div class="field">
      <%= f.text_field :name, placeholder: "Name" %> 
    </div>

    <div class="field">
      <%= f.text_field :email, placeholder: "Email" %> 
    </div>

    <div class="field">
      <%= f.text_area :message, placeholder: "Message" %>
    </div>

    <%= f.submit "Submit", class: "submit", id: "submit-contact" %>
  <% end %>

</section><!-- #contact -->